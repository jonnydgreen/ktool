{
  "name": "toolketes",
  "version": "0.0.1",
  "description": "toolketes CLI",
  "private": true,
  "bin": {
    "toolketes": "bin/toolketes"
  },
  "scripts": {
    "format": "prettier --write **/*.{js,ts,tsx,json}",
    "lint": "tslint -p .",
    "compile": "tsc -p .",
    "build": "yarn format && yarn lint && yarn compile",
    "build-watch": "tsc -p . -w",
    "test": "jest",
    "watch": "jest --watch",
    "snapupdate": "jest --updateSnapshot",
    "coverage": "jest --coverage"
  },
  "files": [
    "tsconfig.json",
    "tslint.json",
    "build",
    "LICENSE",
    "readme.md",
    "docs",
    "bin"
  ],
  "license": "MIT",
  "dependencies": {
    "typescript": "3.4.2",
    "ts-node": "^8.0.3",
    "gluegun": "^3.2.0"
  },
  "devDependencies": {
    "@types/node": "^12.0.4",
    "@types/jest": "^24.0.11",
    "ts-jest": "^24.0.2",
    "tslint": "^5.12.0",
    "tslint-config-prettier": "^1.17.0",
    "tslint-config-standard": "^8.0.1",
    "prettier": "^1.12.1",
    "jest": "^24.7.1"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  }
}
